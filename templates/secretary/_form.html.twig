<div class="overflow-hidden space">
	<div class="container">
		{{ form_start(form, {'attr': {'class': 'appointment-form2'}}) }}

		<div class="row justify-content-center text-center">
			<div class="col-xl-9">
				<div class="title-area">
					<h3 class="sec-heading">Secretary</h3>
				</div>
			</div>
		</div>

		<div class="row justify-content-center">
			<div class="quantity col-md-4">
				{{ form_label(form.yearExp, 'Years of Experience:', {'label_attr': {'class': 'qty-label'}}) }}
				{{ form_widget(form.yearExp, {'attr': {'class': 'qty-input', 'type': 'number', 'step': '1', 'min': '0', 'max': '100', 'name': 'quantity', 'title': 'Qty'}}) }}
				<button class="quantity-plus qty-btn">
					<i class="far fa-chevron-up"></i>
				</button>
				<button class="quantity-minus qty-btn">
					<i class="far fa-chevron-down"></i>
				</button>
			</div>
		</div>


		<br>
		<div class="row justify-content-center">
			<div class="form-btn col-2">
				<button class="th-btn btn-fw">{{ button_label|default('Sauvegarder') }}</button>
			</div>
		</div>

		{{ form_end(form) }}
	</div>
</div>

