{% extends 'base.html.twig' %}

{% block title %}Appointment{% endblock %}

{% block body %}
    <h1>Appointment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ appointment.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ appointment.date }}</td>
            </tr>
            <tr>
                <th>Hour</th>
                <td>{{ appointment.hour }}</td>
            </tr>
            <tr>
                <th>PatientStatus</th>
                <td>{{ appointment.patientStatus ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Progress</th>
                <td>{{ appointment.progress }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_appointment_index') }}">back to list</a>

    <a href="{{ path('app_appointment_edit', {'id': appointment.id}) }}">edit</a>

    {{ include('appointment/_delete_form.html.twig') }}
{% endblock %}
