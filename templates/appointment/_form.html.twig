<div class="overflow-hidden space">
	<div class="container">

		{{ form_start(form, {'attr': {'class': 'appointment-form2'}}) }}
		<div class="row justify-content-center text-center">
			<div class="col-xl-9">
				<div class="title-area">
					<h3 class="sec-heading">Patient</h3>
				</div>
			</div>
		</div>
		<div class="row justify-content-center">

			<div class="form-group col-md-6 ">
				{{ form_row(form.date) }}
			</div>

            <div class="form-group col-md-6 ">
				{{ form_row(form.hour, {'attr': {'class': 'form-select'}}) }}
			</div>


            <div class="form-group col-md-6 ">
				{{ form_row(form.patientStatus, {'attr': {'class': 'form-select'}}) }}
			</div>

            <div class="form-group col-md-6 ">
				{{ form_row(form.progress) }}
			</div>

            <div class="form-group col-md-6 ">
				{{ form_row(form.patient) }}
			</div>


            <div class="form-group col-md-6 ">
				{{ form_row(form.doctor) }}
			</div>


            <div class="form-group col-md-6 ">
				{{ form_row(form.Consultation) }}
			</div>
            
			<br>
			<div class="row justify-content-center">
				<div class="form-btn col-2">
					<button class="th-btn btn-fw">{{ button_label|default('Sauvegarder') }}</button>
				</div>
			</div>


			{{ form_end(form) }}
		</div>
	</div>
